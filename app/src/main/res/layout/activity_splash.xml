<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.diegoalvis.android.happywish.views.SplashActivity">


    <ImageView
        android:id="@+id/center_circle_view_1"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/circle_white_150dp"
        android:backgroundTint="@color/red"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/center_circle_view_2"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/circle_white_150dp"
        android:backgroundTint="@color/orange"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/center_circle_view_3"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/circle_white_150dp"
        android:backgroundTint="@color/yellow"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/center_circle_view_4"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/circle_white_150dp"
        android:backgroundTint="@color/green"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/center_circle_view_5"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/circle_white_150dp"
        android:backgroundTint="@color/blue"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/center_circle_view_6"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/circle_white_150dp"
        android:backgroundTint="@color/purple"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/center_circle_view_7"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:background="@drawable/circle_white_150dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/image_logo_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/name_app"
        android:layout_below="@id/image_logo_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryText"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_name_app"
        android:textStyle="bold|italic"
        android:text="@string/app_name"
        android:visibility="invisible"/>


</RelativeLayout>
